<Page x:Class="WpfAppLeden.OntelingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppLeden"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="310"
      Title="OntelingPage">

    <Grid Background="White">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="190"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition  Height="200"></RowDefinition>
            <RowDefinition  Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <ListBox  x:Name="lstOntelingen" HorizontalAlignment="Left" Height="200" Margin="5,0"  Width="180" Grid.Row="1" VerticalAlignment="Top"  />
        <Label Content="Jouw lijst van ontelingen" HorizontalAlignment="Left" Margin="15"  VerticalAlignment="Center" FontWeight="Bold"/>

        <Button x:Name="btnTerugbrengen" Content="Terugbrengen" Grid.Column="1" Grid.Row="1" Width="110" Height="30" VerticalAlignment="Center" Click="btnTerugbrengen_Click" />

    </Grid>
</Page>
