<Window x:Class="Wpftimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpftimer"
        mc:Ignorable="d"
        Title="Timer" Height="400" Width="600">
    <Grid x:Name="GrdTimer" Margin="0,0,-0.4,0.4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="367*"/>
            <ColumnDefinition Width="227*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnStart" Content="START" HorizontalAlignment="Left" Margin="129,27,0,0" VerticalAlignment="Top" Width="94" Height="81" Click="Button_Click"/>
        <Button x:Name="btnStop" Content="STOP" IsEnabled="False" HorizontalAlignment="Left" Margin="129,145,0,0" VerticalAlignment="Top" Width="94" Height="85" Click="btnStop_Click"/>
        <Button x:Name="btnReset" Content="RESET" IsEnabled="False" HorizontalAlignment="Left" Margin="129,265,0,0" VerticalAlignment="Top" Width="94" Height="81" Click="btnReset_Click"/>
        <Label x:Name="lblTijd" Content="" HorizontalAlignment="Left" Margin="280,135,0,0" VerticalAlignment="Top" Height="130" Width="285" FontSize="24" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
